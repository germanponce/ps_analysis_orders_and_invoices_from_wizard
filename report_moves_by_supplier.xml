                                        <td width="25%" align="left" valign="middle" style="border: 1px solid white;padding: 5px;">
                                            <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" style="max-height: 90px;height: auto;"/>
